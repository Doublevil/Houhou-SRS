<UserControl x:Class="Kanji.Interface.Controls.SettingCollapseMeaningLimitControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBlock Style="{StaticResource LegendText}" Text="Maximal number of meanings before collapsing" />
        <xctk:IntegerUpDown Value="{Binding CollapseMeaningLimit, Mode=TwoWay}" Minimum="1" Maximum="99" Width="80" HorizontalAlignment="Left" />
    </StackPanel>
</UserControl>
