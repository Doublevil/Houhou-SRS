<UserControl x:Class="Kanji.Interface.Controls.SettingReviewPlayAudioControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <CheckBox IsChecked="{Binding IsAutoPlay, Mode=TwoWay}" Content="Automatically play audio during reviews"
            ToolTip="If checked, during reviews, after submitting an answer about the reading of a vocab item, the audio for the item will automatically play." />
    </StackPanel>
</UserControl>
